    text-align:center;
    font: 12px Algerian, Helvetica, sans-serif;
    font-size: 13px;
    color:black;
    background-color: chocolate;
}

#header{
    height: 100%;
    background-color: crimson;
    padding: 2% 5%;
}

#content{
    height: 100%;
    padding: 10%;
    background-color: cyan;
}

#footer{
    height: 100%;
    background-color: darkgreen;
    padding: 7%;
}
STYLESHEET3
body{
    text-align:right;
    font: 12px Pristina, Helvetica, sans-serif;
    font-size: 13px;, Helvetica,
    color:black;
    background-color: darkkhaki;
}

#header{
    height: 100%;
    background-color: darkolivegreen;
    padding: 2% 5%;
}

